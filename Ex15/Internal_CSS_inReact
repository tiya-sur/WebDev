StyledButton.js
import React from 'react';
const StyledButton = ({ text, onClick }) => {
  return (
    <div>
      <style>
        {`
          button {
            background-color: lightblue;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
          }
        `}
      </style>
      <button onClick={onClick}>
        {text}
      </button>
    </div>
  );
};
export default StyledButton;

