<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Canvas Scene with Animated Boat</title>
    <style>
        body {
            text-align: center;
        }
        canvas {
            border: 2px solid black;
            background-color: white;
        }
    </style>
</head>
<body>

    
    <canvas id="canvas" width="700" height="400"></canvas>

    <script>
        const canvas = document.getElementById("canvas");
        const ctx = canvas.getContext("2d");

        let boatX = 320;  
        let boatDirection = 1;  

        function drawScene() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Sun
            ctx.beginPath();
            ctx.arc(580, 50, 40, 0, 2 * Math.PI);
            ctx.fillStyle = "yellow";
            ctx.fill();
            ctx.stroke();

            // Sun Rays
            for (let i = 0; i < 12; i++) {
                let angle = (i * Math.PI) / 6;
                let x1 = 580 + Math.cos(angle) * 45;
                let y1 = 50 + Math.sin(angle) * 45;
                let x2 = 580 + Math.cos(angle) * 60;
                let y2 = 50 + Math.sin(angle) * 60;
                ctx.beginPath();
                ctx.moveTo(x1, y1);
                ctx.lineTo(x2, y2);
                ctx.strokeStyle = "yellow";
                ctx.stroke();
            }

            // Pond
            ctx.beginPath();
            ctx.ellipse(350, 250, 150, 80, 0, 0, 2 * Math.PI);
            ctx.fillStyle = "lightblue";
            ctx.fill();
            ctx.stroke();

            // Boat
            ctx.beginPath();
            ctx.moveTo(boatX - 40, 250);
            ctx.lineTo(boatX + 40, 250);
            ctx.lineTo(boatX + 25, 265);
            ctx.lineTo(boatX - 25, 265);
            ctx.closePath();
            ctx.fillStyle = "brown";
            ctx.fill();
            ctx.stroke();

            // Move boat
            boatX += boatDirection * 0.5;
            if (boatX > 380 || boatX < 320) {
                boatDirection *= -1;
            }

            // House
            ctx.fillStyle = "orange";
            ctx.fillRect(100, 200, 80, 100);
            ctx.fillStyle = "brown";
            ctx.fillRect(130, 250, 20, 50);
            ctx.fillStyle = "blue";
            ctx.fillRect(110, 220, 15, 15);

            // Roof
            ctx.beginPath();
            ctx.moveTo(100, 200);
            ctx.lineTo(180, 200);
            ctx.lineTo(140, 160);
            ctx.closePath();
            ctx.fillStyle = "red";
            ctx.fill();
            ctx.stroke();

            // Flower
            ctx.fillStyle = "green";
            ctx.fillRect(540, 280, 10, 50);

            // Leaves
            ctx.beginPath();
            ctx.arc(535, 300, 10, 0, Math.PI, true);
            ctx.arc(555, 300, 10, 0, Math.PI, true);
            ctx.fill();

            // Petals
            ctx.fillStyle = "pink";
            for (let i = 0; i < 5; i++) {
                let angle = (i * Math.PI * 2) / 5;
                let x = 545 + Math.cos(angle) * 20;
                let y = 270 + Math.sin(angle) * 20;
                ctx.beginPath();
                ctx.arc(x, y, 12, 0, 2 * Math.PI);
                ctx.fill();
            }

            // Flower Center
            ctx.beginPath();
            ctx.arc(545, 270, 8, 0, 2 * Math.PI);
            ctx.fillStyle = "yellow";
            ctx.fill();

            // Duck Body
            ctx.fillStyle = "yellow";
            ctx.beginPath();
            ctx.arc(430, 290, 15, 0, 2 * Math.PI);
            ctx.fill();
            ctx.beginPath();
            ctx.arc(450, 280, 10, 0, 2 * Math.PI);
            ctx.fill();

            // Eye
            ctx.fillStyle = "black";
            ctx.beginPath();
            ctx.arc(453, 275, 2, 0, 2 * Math.PI);
            ctx.fill();

            // âœ… Corrected Beak - Now Extending Out of Face
            ctx.fillStyle = "orange";
            ctx.beginPath();
            ctx.moveTo(458, 278); // Base near head
            ctx.lineTo(470, 275); // Beak tip
            ctx.lineTo(470, 281); // Bottom of beak
            ctx.closePath();
            ctx.fill();

            // Stones
            function drawStone(x, y) {
                ctx.beginPath();
                ctx.arc(x, y, 10, 0, 2 * Math.PI);
                ctx.fillStyle = "gray";
                ctx.fill();
                ctx.stroke();
            }

            drawStone(90, 320);
            drawStone(100, 325);
            drawStone(110, 315);

            drawStone(480, 330);
            drawStone(490, 335);
            drawStone(500, 325);

            requestAnimationFrame(drawScene);
        }

        drawScene();
    </script>

</body>
</html>

